*{
    box-sizing: border-box;
    margin: 0;
    padding: 0;	
    font-family: Raleway, sans-serif;
}
        
.form-class {
	width: 320px;
	padding: 30px;
	padding-top: 62px;
}
.login__submit {
	background: #fff;
	font-size: 14px;
	margin-top: 30px;
	padding: 16px 20px;
